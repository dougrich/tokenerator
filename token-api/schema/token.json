{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "revision": { "type": "number" },
    "created": { "type": "string" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 32
        },
        "description": { "type": "string" },
        "author": { "type": "string" }
      }
    },
    "parts": {
      "type": "array",
      "maxItems": 64,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "fill"
        ],
        "properties": {
          "id": { "type": "string" },
          "variant": { "type": "string" },
          "fill": {
            "type": "object",
            "additionalProperties": {
              "type": "string",
              "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
            }
          }
        }
      }
    }
  }
}